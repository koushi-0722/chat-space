.chat-side
  .side-header
    .side-header__box
      .side-header__box__username 
        =current_user.name
      .side-header__box__items 
        =link_to new_group_path ,class: ".side-header__box__items__edit" do
          =icon('fas', 'edit')
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
        
  .groups-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message