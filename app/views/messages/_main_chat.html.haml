.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box-name test
      .main-header__left-box-user masa
    .main-header__edit
      =link_to "#", class:"main-header__edit-box" do
        Edit  
  .content
    .content__message
      .content__message__name masa 2020/01/19
      .content__message__text おはよう
  .form
    %form.new_message 
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "typ a message"}
        %label{class: "input-box__image"}
          = icon('fas','image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn"}

